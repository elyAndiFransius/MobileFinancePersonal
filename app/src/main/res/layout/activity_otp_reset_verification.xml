<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/primary2"
    android:layout_height="match_parent"
    tools:context=".activity.Auth.otpResetVerificationActivity">

    <!-- Tombol Kembali -->
    <ImageView
        android:id="@+id/id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="OTP Verifikasi"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_back" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Kami telah mengirimkan kode verifikasi ke alamat email kamu"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul" />

    <!-- Timer -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input OTP (6 digit) -->
    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gunakan 6 EditText, bisa pakai style kotak -->
        <EditText
            android:id="@+id/otp1"
            style="@style/OtpEditTextStyle"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp" />
        <EditText
            android:id="@+id/otp2"
            style="@style/OtpEditTextStyle"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp" />
        <EditText
            android:id="@+id/otp3"
            style="@style/OtpEditTextStyle"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp" />
        <EditText
            android:id="@+id/otp4"
            style="@style/OtpEditTextStyle"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp" />
        <EditText
            android:id="@+id/otp5"
            style="@style/OtpEditTextStyle"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp" />
        <EditText
            android:id="@+id/otp6"
            style="@style/OtpEditTextStyle"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Resend dan Verify -->
    <TextView
        android:id="@+id/descResent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum menerima email?"
        android:textSize="14sp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Resend dan Verify -->
    <TextView
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Kirim_ulang_html"
        android:layout_marginStart="245dp"
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Save -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_ripple_dark"
        android:padding="12dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/descResent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>